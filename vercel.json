{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/",
            "destination": "/client/index.html"
        },
        {
            "source": "/((?!api/.*).*)",
            "destination": "/client/$1"
        }
    ]
}